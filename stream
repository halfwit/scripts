#!/bin/bash

if pgrep mpg123; then
	pkill mpg123
	echo "" > /tmp/statusmusic
	exit 0
fi
mpc play
mpg123 --no-control -b 1024 http://192.168.1.120:28128 &>/dev/stdout | while read -r line; do
	echo "$line" | grep StreamTitle | sed "s/ICY-META: StreamTitle='/â™« /" | sed "s/';StreamUrl=.*//" | tail -c 80 > "$XDG_RUNTIME_DIR/statusbar/media"
done
