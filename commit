#!/bin/bash

crawl() {
		for i in $1/*; do
				if test -d $i 2>/dev/null; then
						cd "$i"
				else
						continue
				fi
				
				if git rev-parse --show-toplevel &>/dev/null; then
						stat="$(git diff --shortstat)"
						[[ ${#stat} > 0 ]] && printf '%s|%s\n' "${i/$HOME/}" "$stat"
				else
						crawl "$i" &
				fi
		done
}

handle_results() {
		while read -r url; do
				cd "$HOME${url%%\ *}"
				st -e git commit -a --verbose &
		done
}

# =^.^=
if [[ $1 == "wc" ]]; then
	cat <(crawl ~/code) <(crawl "$XDG_CONFIG_HOME") | wc -l
else
	cat <(crawl "$XDG_CONFIG_HOME") <(crawl ~/code) | column -s '|' -t | dmenu -p "Commit: " | handle_results 
	/usr/local/share/hwwm/gitbar &
fi
