#!/bin/bash

check() {
	cd "$1" || return 0
	if git diff --shortstat 2>/dev/null | grep -q changed; then
		printf '%s|%s\n' "${1/$HOME/}" "$(git diff --shortstat)"
		return 1
	fi
	return 0
}

crawl() {
	for i in "$1"/*; do
		cd "$i" 2>/dev/null || continue
		check "$i" && crawl "$i" &
	done
}

handle_results() {
	while read -r url; do
		cd "$HOME${url%%\ *}"
		# Commit hook will take care of updating bar
		git commit -a -s --verbose
	done
}

# =^.^=
column -s '|' -t <(check "$XDG_CONFIG_HOME") <(crawl ~/code) <(crawl "$XDG_DATA_HOME/blog") | dmenu -p "Commit: " | handle_results 
